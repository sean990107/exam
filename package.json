{
  "name": "exam-system",
  "version": "1.0.0",
  "description": "卡片式考试系统",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "client": "cd client && npm start",
    "server": "cd server && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-all": "npm install && cd client && npm install --production=false && cd ../server && npm install --production=false",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "build": "npm run build:client && npm run build:server && node build-script.js",
    "start:prod": "cd server && node dist/index.js",
    "start": "cd server && node dist/index.js"
  },
  "keywords": [
    "exam",
    "react",
    "nodejs",
    "typescript",
    "antd"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3"
  }
} 